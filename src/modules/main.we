<template>
    <div class="wrapper">
        <list class="list">
            <refresh class="refreshBlock" onrefresh="refreshData" display="{{refreshDisplay}}">
                <loading-indicator class="indicator"></loading-indicator>
                <text class="loadingText">刷新列表</text>
            </refresh>
            <cell class="row" repeat="(index, article) in articleList" id="article-{{index}}">
                <div class="item">
                    <image class="cover" src="http://b.hiphotos.baidu.com/news/crop%3D0%2C1%2C396%2C238%3Bw%3D638/sign=9864067bc05c1038303194828f21bf22/9d82d158ccbf6c81f13e2a89ba3eb13533fa4041.jpg">
                    </image>
                    <text class="title">{{article.title}}</text>
                    <text if={{article.desc!='null'}} class="desc">{{article.desc}}</text>
                </div>
                <div class="item-action">
                    <div
                        class="action {{article.isFavorite}}"
                        fid="{{article.id}}"
                        findex="{{index}}"
                        onclick="doFavorite"
                    >
                    </div>
                    <text class="date">{{article.date}}</text> 
                </div>
            </cell>
            <loading class="loading" onloading="loadingData" display="{{loadingDisplay}}">
                <loading-indicator class="indicator"></loading-indicator>
                <text class="loadingText">{{loadingText}}</text>
            </loading>
        </list>
    </div>
</template>
