<script>
    var dom = require('@weex-module/dom');
    var stream = require('@weex-module/stream');
    var apis = require('../common/api');
    var baseQueryUrl = apis.getHomeUrl();

    module.exports = {
        data: {
            articleList: [],
            isLoaded: true,
            page: 1,
            hasMore: true,
            orderDirect: 'desc',
            loadingDisplay: 'hide',
            refreshDisplay: 'hide',
            loadingText: '加载中...'
        },
        created: function () {
            var self = this;
            var url = `${baseQueryUrl}?order=${self.orderDirect}&pageIndex=${self.page}`;
            this.renderData(url);
            this.page++;
        },
        ready: function () {
        },
        computed: {},
        methods: {
            renderData: function (url) {
                var self = this;
                stream.fetch({
                    method: 'GET',
                    url: url,
                    type:'json'
                }, function(res) {
                    self.refreshDisplay = 'hide';
                    self.loadingDisplay = 'hide';
                    self.isLoaded = true;
                    try {
                        var results = res.data.data;
                        if (Array.isArray(results)) {
                            if( !results.length ) {
                                self.hasMore = false;
                            }
                            for(var i = 0; i < results.length; i++) {
                                const tempResult = results[i];
                                tempResult.isFavorite = tempResult.fid ? 'favorite' : 'unfavorite';
                                self.articleList.push(tempResult);
                            }
                        }
                    } catch(e) { self.hasMore = false; }
                },function(res){

                })
            },
            loadingData: function (e) {
                var self = this;
                var url = `${baseQueryUrl}?order=${self.orderDirect}&pageIndex=${self.page}`;
                if (self.isLoaded === false) return;
                self.isLoaded = false;
                self.loadingDisplay = 'show';

                if (self.hasMore) {
                    self.renderData(url);
                    self.page++;
                } else {
                    self.loadingDisplay = 'hide';
                    self.loadingText = '没有更多沙发了';
                }
            },
            refreshData: function (e) {
                var self = this;
                var url = `${baseQueryUrl}?order=${self.orderDirect}&pageIndex=1`;
                if (self.isLoaded === false) return;
                self.isLoaded = false;
                self.refreshDisplay = 'show';
                self.hasMore = true;
                self.articleList = [];
                self.page = 1;
                self.renderData(url);
                self.page++;
            },
            changeOrderDirect: function(e) {
                // TODO: reverse the order direct and refresh data;
            },
            goToTop: function (e) {
                dom.scrollToElement(this.$el('article-0'), {
                    offset: 0
                });
            },
            doFavorite: function(e){
                // TODO: favorite/unfavorite article for current user;
                console.log(e.target.attr.fid);
                var self = this;
                apis.doFavorite({userId:1, articleId: e.target.attr.fid}, function(res){
                    console.log(res);
                    if(res.status=='favorite' || res.status=='unfavorite'){
                        const tempObj = Object.assign(
                            {},
                            self.articleList[Number(e.target.attr.findex)],
                            {isFavorite: res.status}
                        );
                        self.articleList.$set(Number(e.target.attr.findex), tempObj);
                    }
                });
            },
            doOrder: function(event){
                // TODO: order list by id asc/desc
            },
            doSearch: function(event){
                // TODO: get list by search condition (title/content)
            }
        }
    }
</script>